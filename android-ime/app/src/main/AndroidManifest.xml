<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KeyCareIME"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Home Activity (New Launcher) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KeyCareIME">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activity -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.KeyCareIME" />

        <!-- Status Activity -->
        <activity
            android:name=".StatusActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.KeyCareIME" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:theme="@style/Theme.KeyCareIME" />

        <!-- Try Setup Activity -->
        <activity
            android:name=".TrySetupActivity"
            android:exported="false"
            android:label="Try Your Setup"
            android:theme="@style/Theme.KeyCareIME"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <!-- Keyboard Resize Activity (legacy height-only) -->
        <activity
            android:name=".KeyboardResizeActivity"
            android:exported="false"
            android:label="Resize Keyboard"
            android:theme="@style/Theme.KeyCareIME.Transparent"
            android:screenOrientation="portrait" />

        <!-- Keyboard Scale Activity (full proportional scaling) -->
        <activity
            android:name=".KeyboardScaleActivity"
            android:exported="false"
            android:label="Keyboard Size"
            android:theme="@style/Theme.KeyCareIME"
            android:screenOrientation="portrait" />

        <!-- IME Service -->
        <service
            android:name=".KeyCareIME"
            android:exported="true"
            android:label="@string/ime_name"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/ime_method" />
        </service>

    </application>

</manifest>
