<?xml version="1.0" encoding="utf-8"?>
<!-- Animated danger pill with intense glow -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#2A0A0A"/>
    <stroke
        android:width="1.5dp"
        android:color="#FF525280"/>
    <corners android:radius="14dp"/>
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="4dp"
        android:bottom="4dp"/>
</shape>
