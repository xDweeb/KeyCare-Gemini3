<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- Header with Shield -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ring_glow" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shield"
                android:contentDescription="@string/app_name" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_keyboard"
                android:textColor="@color/textMuted"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Keyboard Enabled Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/step1_title"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/statusEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_disabled"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/chip_pending"
                    android:textColor="@color/text"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Default Keyboard Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/step2_title"
                    android:textColor="@color/text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/statusDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_disabled"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/chip_pending"
                    android:textColor="@color/text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Server Configuration Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_settings"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_server"
                    android:textColor="@color/textMuted"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/inputServerUrl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_dark"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text"
                android:textColorHint="@color/textMuted"
                android:textSize="14sp"
                android:hint="@string/server_hint"
                android:inputType="textUri"
                android:singleLine="true"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSaveServer"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/btn_save"
                    android:textColor="@color/bg"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button_primary"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnTestServer"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/btn_test"
                    android:textColor="@color/text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button_secondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/serverStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="13sp"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnEnableKeyboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_enable"
            android:textColor="@color/bg"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSetDefault"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_set_default"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_secondary" />

    </LinearLayout>
</ScrollView>
