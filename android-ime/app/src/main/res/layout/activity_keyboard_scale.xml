<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0F14">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#0D1117">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keyboard Size"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="#00E5C4"
            android:textSize="14sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Test Input Field -->
    <EditText
        android:id="@+id/editTestInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here to test..."
        android:textColor="#FFFFFF"
        android:textColorHint="#6B7785"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_key_premium"
        android:inputType="text"
        android:maxLines="2"/>

    <!-- Scale Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/lblScaleValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="#00E5C4"
            android:textSize="48sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keyboard Scale"
            android:textColor="#9AA4AF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Scale Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:textColor="#6B7785"
            android:textSize="12sp"/>

        <SeekBar
            android:id="@+id/seekScale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:min="75"
            android:max="130"
            android:progress="100"
            android:progressTint="#00E5C4"
            android:thumbTint="#00E5C4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130%"
            android:textColor="#6B7785"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Quick Presets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnPresetSmall"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Small"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_key_special_premium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPresetNormal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Normal"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_key_special_premium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPresetLarge"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Large"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_key_special_premium"/>
    </LinearLayout>

    <!-- Spacer to push preview and buttons to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Keyboard Preview Container -->
    <FrameLayout
        android:id="@+id/keyboardPreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_keyboard_gradient">

        <!-- Preview will be inflated here dynamically -->
        <include
            android:id="@+id/keyboardPreview"
            layout="@layout/keyboard_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#0D1117">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_key_special_premium"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="#0B0F14"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_cta_premium"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
