<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0F14">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Try Your Setup"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="Settings"/>
    </LinearLayout>

    <!-- Instructions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_settings_card"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨ Test KeyCare keyboard"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the text field below to open the keyboard and test typing. Try writing something risky to see the AI detection in action!"
            android:textColor="#9AA4AF"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language: "
            android:textColor="#9AA4AF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/lblLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN"
            android:textColor="#00E5C4"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="#3A4556"
            android:layout_marginHorizontal="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="#9AA4AF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAFE"
            android:textColor="#2ECC71"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/pill_safe"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lblCharCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 chars"
            android:textColor="#6B7785"
            android:textSize="11sp"/>
    </LinearLayout>

    <!-- Text Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <EditText
            android:id="@+id/editTestInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_area"
            android:textColor="#FFFFFF"
            android:textColorHint="#6B7785"
            android:textSize="16sp"
            android:hint="Type here to test KeyCare keyboard...\n\nTry typing something like:\n• 'I'm going to hurt you'\n• 'You're so stupid'\n• 'I hate everything about this'\n\n...and see how KeyCare detects risky content!"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|start"
            android:padding="16dp"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Clear Text"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_outline"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnOpenSettings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="⚙ Settings"
            android:textColor="#0B0F14"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_cta_button"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
