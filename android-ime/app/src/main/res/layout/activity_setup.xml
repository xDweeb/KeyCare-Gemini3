<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo / Header -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⌨️"
                android:textSize="64sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KeyCare Keyboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-Powered Safe Typing"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Setup Steps Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup Instructions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_primary"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable KeyCare in system settings"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <Button
                android:id="@+id/btnEnableKeyboard"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Enable KeyCare Keyboard"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="20dp" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_primary"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set KeyCare as your default keyboard"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSetDefault"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Set as Default Keyboard"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary" />
        </LinearLayout>

        <!-- Connection Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Connection"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/connectionIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/badge_offensive" />

                <TextView
                    android:id="@+id/connectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking..."
                    android:textSize="14sp"
                    android:textColor="#5F6368"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/serverUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server: http://10.1.12.192:8000"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnCheckConnection"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Test Connection"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:background="#E3F2FD"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How It Works"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• KeyCare analyzes your text as you type\n• Shows risk level: Safe, Offensive, or Dangerous\n• Suggests rephrased alternatives when needed\n• Helps you communicate more respectfully"
                android:textSize="13sp"
                android:textColor="#5F6368"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeyCare v1.0 • Made with ❤️"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
