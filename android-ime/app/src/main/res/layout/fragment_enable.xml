<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_title"
                android:textColor="@color/text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_dark"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_step_circle"
                    android:text="1"
                    android:textColor="@color/bg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step1_title"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step1_desc"
                        android:textColor="@color/textMuted"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/chipStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_disabled"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/chip_pending"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_dark"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_step_circle"
                    android:text="2"
                    android:textColor="@color/bg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step2_title"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step2_desc"
                        android:textColor="@color/textMuted"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/chipStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_disabled"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/chip_pending"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_dark"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_step_circle"
                    android:text="3"
                    android:textColor="@color/bg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step3_title"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step3_desc"
                        android:textColor="@color/textMuted"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/chipStep3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_disabled"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/chip_pending"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Page Dots -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_inactive"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_inactive"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_active" />
            </LinearLayout>

            <!-- Enable Keyboard Button -->
            <Button
                android:id="@+id/btnEnableKeyboard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_enable"
                android:textColor="@color/bg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="12dp" />

            <!-- Set as Default Button -->
            <Button
                android:id="@+id/btnSetDefault"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_set_default"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_secondary"
                android:layout_marginBottom="12dp" />

            <!-- Finish Button -->
            <Button
                android:id="@+id/btnFinish"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_finish"
                android:textColor="@color/bg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
